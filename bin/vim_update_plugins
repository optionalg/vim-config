#!/usr/bin/env ruby
require 'fileutils'
root_repo_dir = File.absolute_path(File.dirname(__FILE__)) + '/..'

Dir[root_repo_dir + "/.vim/bundle/*"].each do |directory|
  FileUtils.cd directory
  puts "Updating #{directory.split('/').last}..."
  puts `git fetch origin; git rebase origin/master`
  FileUtils.cd(root_repo_dir)
end
